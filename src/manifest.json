{
  "manifest_version": 2,
  "name": "Netflix Addictector – Netflix Screen Time",
  "short_name": "Netflix Addictector",
  "version": "1.0.1",
  "version_name": "1.0 beta",
  "browser_action": {
    "default_title": "",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "/assets/images/icon-16.png",
      "19": "/assets/images/icon-19.png",
      "32": "/assets/images/icon-32.png",
      "38": "/assets/images/icon-38.png",
      "48": "/assets/images/icon-48.png",
      "128": "/assets/images/icon-128.png"
    }
  },
  "description": "A web browser extension that identifies, prevents, and helps with Netflix addiction. It’s time to push pause on your addiction.",
  "icons": {
    "16": "/assets/images/icon-16.png",
    "19": "/assets/images/icon-19.png",
    "32": "/assets/images/icon-32.png",
    "38": "/assets/images/icon-38.png",
    "48": "/assets/images/icon-48.png",
    "128": "/assets/images/icon-128.png"
  },
  "author": "https://felixisaac.dev",
  "background": {
    "scripts": [
      "./scripts/events.js",
      "./scripts/tabs.js",
      "./scripts/utils.js",
      "./scripts/alarm.js"
    ],
    "persistent": false
  },
  "homepage_url": "https://projects.felixisaac.dev/netflix-addictector",
  "permissions": ["storage", "alarms", "https://*.netflix.com/*"],
  "content_scripts": [{
    "matches": ["*://*.netflix.com/*"],
    "js": ["content.js", "/scripts/timer.js", "/scripts/utils.js", "/scripts/screen-blocker.js"]
  }],
  "options_page": "options/options.html",
  "web_accessible_resources": ["assets/no.svg", "assets/css/blocked.css"]
}

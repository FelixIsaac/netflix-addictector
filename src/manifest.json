{
  "name": "Netflix Addictector",
  "description": "A web browser extension that identifies, prevents, and helps with Netflix addiction",
  "version": "1.0.1",
  "version_name": "1.0 beta",
  "author": "https://felixisaac.dev",
  "homepage_url": "https://projects.felixisaac.dev/netflix-addictector",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms"],
  "host_permissions": ["*://*.netflix.com/*"],
  "content_scripts": [{
    "matches": ["*://*.netflix.com/*"],
    "js": ["content.js", "/scripts/timer.js", "/scripts/utils.js", "/scripts/screen-blocker.js"]
  }],
  "action": {
    "default_title": "",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "/assets/images/icon-16.png",
      "19": "/assets/images/icon-19.png",
      "32": "/assets/images/icon-32.png",
      "38": "/assets/images/icon-38.png",
      "48": "/assets/images/icon-48.png",
      "128": "/assets/images/icon-128.png"
    }
  },
  "icons": {
    "16": "/assets/images/icon-16.png",
    "19": "/assets/images/icon-19.png",
    "32": "/assets/images/icon-32.png",
    "38": "/assets/images/icon-38.png",
    "48": "/assets/images/icon-48.png",
    "128": "/assets/images/icon-128.png"
  },
  "options_page": "options/options.html"
}
